<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AdminServlett</servlet-name>
        <servlet-class>pl.serwkomp.net.servlettutorial.AdminServlett</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUnit</servlet-name>
        <servlet-class>pl.serwkomp.net.servlettutorial.ServletUnit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUtil</servlet-name>
        <servlet-class>pl.serwkomp.net.servlettutorial.ServletUtil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtReadServelt</servlet-name>
        <servlet-class>pl.serwkomp.net.servlettutorial.AtReadServelt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAcountServlet</servlet-name>
        <servlet-class>pl.serwkomp.net.servlettutorial.AddAcountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlett</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
   
    <servlet-mapping>
        <servlet-name>AtReadServelt</servlet-name>
        <url-pattern>/read</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAcountServlet</servlet-name>
        <url-pattern>/add-acount</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
